<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ffffff"
        >
        <CheckBox
            android:id="@+id/shopcar_choose"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:button="@null"
            android:background="@drawable/shopcar_select" />

        <ImageView
            android:id="@+id/shopcar_item_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46dp"
            />

        <TextView
            android:id="@+id/shopcar_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/shopcar_item_img"
            android:textColor="@color/c_black"
            android:textSize="@dimen/half_title" />
<TextView
    android:id="@+id/money"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="¥"
    android:textSize="@dimen/half_title"
    android:textColor="#f94426"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="12dp"
    android:layout_toRightOf="@+id/shopcar_item_img"
    />
        <TextView
            android:id="@+id/shopcar_item_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/money"
            android:textColor="#f94426"
            android:textSize="@dimen/titele" />

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/shopcar_number"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/shopcar_subtract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="－" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/c_black" />

            <TextView
                android:id="@+id/shopcar_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/c_black"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/c_black" />

            <TextView
                android:id="@+id/shopcar_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="＋" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
