<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7ebef"
    android:orientation="vertical"
    tools:context="com.myproject.RetrievePasswordActivity">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/car_title">

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:id="@+id/retrievrpasswordactivity_back"
                android:layout_centerInParent="true"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="#ffff"
            android:textSize="@dimen/titele" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="6dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/phone" />

        <EditText
            android:id="@+id/retrievrpasswordactivity_telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="#919191" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/regist_key"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            />
        <EditText
            android:id="@+id/retrievrpasswordactivity_vercode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:singleLine="true"
            android:hint="请输入验证码"
            android:textColorHint="#919191"
            android:background="@null"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/retrievrpasswordactivity_getvercode"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:background="@drawable/btn_login_up"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/login_userpwd" />

        <EditText
            android:id="@+id/retrievrpasswordactivity_userpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="#919191" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/login_userpwd" />

        <EditText
            android:id="@+id/retrievrpasswordactivity_repeatuserpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="#919191" />
    </RelativeLayout>
    <TextView
        android:id="@+id/retrievrpasswordactivity_complete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_login_dot"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffff" />
</LinearLayout>
