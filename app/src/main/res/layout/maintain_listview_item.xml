<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="96dp">
    <ImageView
        android:id="@+id/maintain_listview_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
/>
    <LinearLayout
        android:layout_toRightOf="@+id/maintain_listview_img"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名称:"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/maintain_listview_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砹轮汽车美容连锁"
                android:textColor="@color/c_black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称:"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/maintain_listview_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砹轮汽车美容连锁"
                android:textColor="@color/c_black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单时间:"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/maintain_listview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砹轮汽车美容连锁"
                android:textColor="@color/c_black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费金额:"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#f94426"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/maintain_listview_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80.00"
                android:textColor="#f94426"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
</LinearLayout>
