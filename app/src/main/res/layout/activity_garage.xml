<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myproject.GarageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/car_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的车库"
            android:textColor="#ffff"
            android:textSize="@dimen/titele" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="224dp"
        android:layout_height="354dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/uploading"
        android:layout_marginTop="15dp">
<ImageView
    android:id="@+id/garage_addcar"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@mipmap/addcar"
    android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加爱车"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/garage_addcar"
            android:layout_marginTop="14dp"
            android:textSize="15sp"
            android:textColor="#888888"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/deletecar"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="90dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除车型"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="90dp"/>
        <RadioButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="54dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为常用车"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="68dp"/>

    </RelativeLayout>

</LinearLayout>
