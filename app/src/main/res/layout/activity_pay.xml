<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myproject.PayActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/car_title">

        <RelativeLayout
            android:id="@+id/pay_back"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认支付"
            android:textColor="#ffff"
            android:textSize="@dimen/titele" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="订单金额："
            android:textColor="@color/c_black"
            android:textSize="@dimen/half_title" />

        <TextView
            android:id="@+id/pay_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:text="0.00"
            android:layout_alignParentRight="true"
            android:textColor="#f94426"
            android:textSize="@dimen/half_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="元"
            android:textColor="#f94426"
            android:textSize="@dimen/half_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="请选择支付方式："
            android:textColor="@color/c_black"
            android:textSize="@dimen/half_title" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/activity_pay_weixin"
        android:layout_marginTop="2dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/wchat"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信支付"
            android:textColor="@color/c_black"
            android:textSize="10sp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信安全支付"
            android:textColor="#a3a3a3"
            android:textSize="10sp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="22dp"/>

        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/go" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/activity_pay_zhifubao"
        android:layout_marginTop="2dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/alipay"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="@color/c_black"
            android:textSize="10sp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数亿用户都在用，安全可存托"
            android:textColor="#a3a3a3"
            android:textSize="10sp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="22dp"/>

        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/go" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/activity_pay_yinlian"
        android:layout_marginTop="2dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/unionpay"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联支付"
            android:textColor="@color/c_black"
            android:textSize="@dimen/half_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="49dp"/>

        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/go" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
