<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myproject.TransactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="订单号:"
                android:textColor="@color/c_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="75dp"
                android:textColor="@color/c_black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/order_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/c_blue"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="12dp"
                android:text="收货人:"
                android:textColor="@color/c_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="93dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/c_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/c_black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/adr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="40dp"
                android:text="收货地址:"
                android:textColor="@color/c_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="95dp"
                android:textColor="@color/c_black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/go" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/transaction_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                 />

            <TextView
                android:id="@+id/order_item_goodsimg"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/transaction_img"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/transaction_img"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/c_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/transaction_img"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/transaction_img"
                android:text="数量：×"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/transaction_img"
                android:layout_marginLeft="52dp"
                android:layout_toRightOf="@+id/transaction_img"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/transaction_img"
                android:layout_marginLeft="68dp"
                android:layout_toRightOf="@+id/transaction_img"
                android:text="轮胎类型："
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/transaction_img"
                android:layout_marginLeft="128dp"
                android:layout_toRightOf="@+id/transaction_img"
                android:text="普通胎"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="#f94426"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="¥"
                android:layout_toLeftOf="@+id/order_item_price"
                android:textColor="#f94426"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/hotsearch"
                android:gravity="center"
                android:text="追加评论"
                android:textSize="12sp" />
        </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="#fff"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="商品总价"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/transaction_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/transaction_sale"
                    android:text="¥"
                    android:textSize="12sp" />

            </RelativeLayout>








    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff">

        <TextView
            android:id="@+id/order_item_pinglun"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/hotsearch"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_item_delete"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="86dp"
            android:background="@drawable/hotsearch"
            android:gravity="center"


            android:text="删除订单"
            android:textColor="#888888"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
