<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="订单时间:"
                android:textColor="@color/c_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="75dp"
                android:textColor="@color/c_black"
                android:textSize="12sp" />



            <TextView
                android:id="@+id/order_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="已完成"
                android:textColor="@color/c_blue"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="1dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/order_item_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/shopcar_01" />

            <TextView
                android:id="@+id/order_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/order_item_img"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/c_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_item_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="650"
                android:textColor="#f94426"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/order_item_danjia"
                android:layout_marginRight="4dp"
                android:text="¥"
                android:textColor="#f94426"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/c_black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="×"
                android:layout_toLeftOf="@+id/order_item_num"
                android:textColor="@color/c_black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:background="#fff">


            <TextView
                android:id="@+id/doller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="¥"
                android:layout_toLeftOf="@+id/order_item_totalsale"
                android:textColor="#f94426"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_item_totalsale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="650"
                android:textColor="#f94426"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/doller"
                android:text="合计:"
                android:textColor="@color/c_black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#fff">

            <TextView
                android:id="@+id/order_item_pinglun"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/hotsearch"
                android:gravity="center"
                android:text="追加评论"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_delete"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="86dp"
                android:background="@drawable/hotsearch"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="#888888"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
