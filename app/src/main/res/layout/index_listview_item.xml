<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/index_listview_img"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@mipmap/listview1" />
    <TextView
        android:layout_width="1dp"
        android:background="@color/c_gray"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/index_listview_details"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="龟牌表板蜡汽车用品仪表盘龟牌表板蜡汽车用品仪表盘"
            android:textColor="@color/c_black"
            android:textSize="@dimen/half_title"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/index_listview_sale"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="¥9.8"
            android:textSize="@dimen/half_title"
            android:textColor="#ff00"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>
</LinearLayout>
