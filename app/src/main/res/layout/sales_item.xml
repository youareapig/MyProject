<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="127dp">

    <ImageView
        android:id="@+id/sales_item_img"
        android:layout_width="82dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:id="@+id/a11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sales_item_img"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/sales_item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动价¥"
            android:textColor="#f94426"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sales_item_activitprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/sales_item_text1"
            android:textColor="#f94426"
            android:textSize="12sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/a11"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/sales_item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="会员价¥"
            android:textColor="#888888"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/sales_item_newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/sales_item_text2"
            android:textColor="#888888"
            android:textSize="10dp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="#888888" />
    </RelativeLayout>
</RelativeLayout>
